{
    "name": "puf-api",
    "version": "0.0.0",
    "main": "index.js",
    "author": "Marcos Kloss",
    "license": "MIT",
    "private": true,
    "scripts": {
        "db:migrate": "yarn prisma migrate dev",
        "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js",
        "prebuild": "rm -rf ./dist",
        "build": "babel src --extensions \".js\" --ignore \"*.spec.js,*.test.js\" --out-dir dist --copy-files",
        "test": "yarn test:unit && yarn test:functional",
        "test:functional": "yarn jest --projects ./test --runInBand",
        "test:unit": "yarn jest",
        "fix": "run-s \"fix:* {@}\" --",
        "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
        "fix-format": "prettier --write",
        "format": "yarn fix:format 'src/**/*.(js|ts|json|md)'",
        "lint": "yarn fix:lint src/**/*.{js,ts,md,json}"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "./src/**/*.{js,md,json}": [
            "yarn fix"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.8",
        "@babel/node": "^7.16.8",
        "@babel/plugin-proposal-optional-chaining": "^7.16.7",
        "@babel/preset-env": "^7.16.11",
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/jest": "^27.4.1",
        "babel-plugin-module-resolver": "^4.1.0",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-json": "^3.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.7",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.0",
        "supertest": "^6.2.2"
    },
    "dependencies": {
        "@koa/cors": "^3.2.0",
        "@koa/router": "^10.1.1",
        "@prisma/client": "3.11.0",
        "bcrypt": "^5.0.1",
        "dotenv": "^16.0.0",
        "dotenv-safe": "^8.2.0",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "prisma": "3.11.0"
    }
}
