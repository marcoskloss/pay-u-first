datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id String @id @default(cuid())
    name String?
    email String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    deletedAt DateTime?

    transactions Transaction[]

    @@map("users")
}

enum Recurrence {
    monthly
}

model Transaction {
    id String @id @default(cuid())
    userId String
    description String
    value Float
    recurrence Recurrence?
    installments Int?
    isSubscription Boolean?
    dueDate DateTime?
    resolved Boolean @default(false)

    user User @relation(fields: [userId], references: [id])

    @@map("transactions")
}
